<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            >

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:id="@+id/person_photo"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginRight="16dp"
                android:src="@drawable/avatar" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/person_name"
                android:layout_toRightOf="@+id/person_photo"
                android:layout_alignParentTop="true"
                android:textSize="15sp"
                android:text="Michal falat"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/time"
                android:textSize="10sp"
                android:layout_toRightOf="@+id/person_photo"
                android:layout_below="@+id/person_name"
                android:text="pred 2 hodinami"
                />
            <TextView
                android:text="TextView"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/person_photo"
                android:paddingLeft="5dp"
                android:paddingTop="10dp"
                android:id="@+id/post_description" />

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/post_photo"
                android:layout_marginTop="5dp"

                android:layout_below="@+id/post_description"
                android:layout_centerHorizontal="true"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter" />



            <ImageView
                android:layout_below="@+id/post_photo"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:id="@+id/button_like"
                android:layout_marginTop="15dp"
                android:src="@drawable/like"/>
            <TextView
                android:layout_below="@+id/post_photo"
                android:text="15"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/button_like"
                android:paddingLeft="5dp"
                android:paddingTop="15dp"
                android:id="@+id/post_totalLikes" />

            <ImageView
                android:layout_below="@+id/post_photo"
                android:layout_toRightOf="@+id/post_totalLikes"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginLeft="20dp"
                android:id="@+id/button_comments"
                android:layout_marginTop="15dp"
                android:src="@drawable/comments"/>
            <TextView
                android:layout_below="@+id/post_photo"
                android:text="21"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/button_comments"
                android:paddingLeft="5dp"
                android:paddingTop="15dp"
                android:id="@+id/post_totalComments" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>



</LinearLayout>